{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "server/src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "typeRoots": ["./types", "./node_modules/@types"],
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
